<?xml version="1.0"?>
<config>
  	<tabs>
        <myconf_vijaystore translate="label" module="productflasher">
            <label>Product Flasher</label>
            <sort_order>300</sort_order>
        </myconf_vijaystore>
    </tabs>	
	<sections>
		<productflasher translate="label" module="productflasher">
			<label>Product Flasher</label>
			<tab>myconf_vijaystore</tab>
			<sort_order>999</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
				<settings translate="label">
					<label>Product Flasher</label>
					<sort_order>10</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
						<fields>
							<active translate="label comment">
								<label>Enabled</label>
								<frontend_type>select</frontend_type>
								<source_model>adminhtml/system_config_source_yesno</source_model>
								<validate>required-entry </validate> 
								<sort_order>10</sort_order>
								<show_in_default>1</show_in_default>
								<show_in_website>1</show_in_website>
								<show_in_store>1</show_in_store>
							</active>
							<background_color translate="label comment">
								<label>Background Color</label>
								<frontend_type>text</frontend_type>
								<frontend_model>productflasher/adminhtml_system_config_color</frontend_model>
								<validate>required-entry </validate> 
								<sort_order>40</sort_order>
								<show_in_default>1</show_in_default>
								<show_in_website>1</show_in_website>
								<show_in_store>1</show_in_store>
							</background_color>
							<title_text_color translate="label comment">
								<label>Main Title Text Color</label>
								<frontend_type>text</frontend_type>
								<frontend_model>productflasher/adminhtml_system_config_color</frontend_model>
								<validate>required-entry </validate> 
								<sort_order>20</sort_order>
								<show_in_default>1</show_in_default>
								<show_in_website>1</show_in_website>
								<show_in_store>1</show_in_store>
							</title_text_color>
							<subtitle_text_color translate="label comment">
								<label>SubTitle Text Color</label>
								<frontend_type>text</frontend_type>
								<frontend_model>productflasher/adminhtml_system_config_color</frontend_model>
								<validate>required-entry </validate> 
								<sort_order>30</sort_order>
								<show_in_default>1</show_in_default>
								<show_in_website>1</show_in_website>
								<show_in_store>1</show_in_store>
							</subtitle_text_color>
							<animation_speed translate="label comment">
								<label>Animation Speed</label>
								<frontend_type>text</frontend_type>
								<comment>1 Second = 1000;Default = 8000(8 sec);</comment>
								<validate>required-entry </validate> 
								<sort_order>50</sort_order>
								<show_in_default>1</show_in_default>
								<show_in_website>1</show_in_website>
								<show_in_store>1</show_in_store>
							</animation_speed>
						<!--
							<subtitle_text_length translate="label comment">
								<label>SubTitle Text Color</label>
								<frontend_type>text</frontend_type>
								<validate>required-entry </validate> 
								<sort_order>30</sort_order>
								<show_in_default>1</show_in_default>
								<show_in_website>1</show_in_website>
								<show_in_store>1</show_in_store>
							</subtitle_text_length>
						-->
						</fields>
				</settings>
			</groups>
		</productflasher>
	</sections>
</config>